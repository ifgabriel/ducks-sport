{
  "_beagleComponent_": "beagle:container",
  "style": {
    "flex": {
      "alignItems": "CENTER",
      "flexDirection": "COLUMN",
      "justifyContent": "CENTER"
    },
    "background": "#EDEDED"
  },
  "children": [
    {
      "_beagleComponent_": "beagle:container",
      "context": {
        "id": "searchValue",
        "value": ""
      },
      "style": {
        "flex": {
          "alignItems": "CENTER",
          "flexDirection": "COLUMN",
          "justifyContent": "CENTER"
        },
        "size": {
          "width": {
            "value": 1118,
            "type": "REAL"
          }
        },
        "margin": {
          "top": {
            "value": 40,
            "type": "REAL"
          }
        }
      },
      "children": [
        {
          "_beagleComponent_": "custom:input",
          "value": "@{searchValue}",
          "label": "Pesquise por algo",
          "placeholder": "Nike, Adidas, Mochila...",
          "onChange": [
            {
              "_beagleAction_": "beagle:setContext",
              "contextId": "searchValue",
              "value": "@{onChange.value}"
            }
          ]
        },
        {
          "_beagleComponent_": "beagle:text",
          "text": "@{searchValue}"
        },
        {
          "_beagleComponent_": "custom:grid",
          "title": "Recomendado",
          "filter": "@{searchValue}"
        },
        {
          "_beagleComponent_": "custom:grid",
          "title": "Novos",
          "filter": "@{searchValue}"
        }
      ]
    }
  ]
}
